<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">Login</div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card-body">
          <div class="form-group">
            <%= f.label :email, class: 'cols-sm-2 control-label' %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your Email' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'cols-sm-2 control-label' %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your Password' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
          <div class="form-group ">
            <%= f.submit "Log in", class: 'btn btn-primary btn-lg btn-block login-button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
