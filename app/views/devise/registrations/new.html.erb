<%= render "devise/shared/error_messages", resource: resource %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">Login</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: 'cols-sm-2 control-label' %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your Email' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, class: 'cols-sm-2 control-label' %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Enter your Password' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, class: 'cols-sm-2 control-label' %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.password_field :password_confirmation, autocomplete: "current-password", class: 'form-control', placeholder: 'Confirm your Password' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <%= render "devise/shared/links" %>
          </div>
          </div>
          <div class="form-group ">
            <%= f.submit "Create account", class: 'btn btn-primary btn-lg btn-block login-button' %>
          </div>
        <% end %>
        </div>
  </div>
</div>