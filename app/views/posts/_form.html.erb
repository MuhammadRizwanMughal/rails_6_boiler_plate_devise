<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">Login</div>
      <%= form_with(model: post, local: true) do |f| %>
        <div class="card-body">
          <% if post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
                <% post.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.label :title, class: 'cols-sm-2 control-label' %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Enter Title' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :image, class: 'cols-sm-2 control-label' %>
            <div class="cols-sm-10">
              <div class="input-group">
                <%= f.file_field :image, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit 'Share Image', class: 'btn btn-primary btn-lg btn-block login-button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

